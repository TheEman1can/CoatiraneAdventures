<NewGameScreen>:
    name: 'new_game'
    #background_source: 'backgrounds/newgamebackground.png'
    #Image:
    #    id: title
    #    size_hint: app.get_dkey('ng.t s_h')
    #    pos_hint: app.get_dkey('ng.t p_h')
    #    source: 'backgrounds/Title.png'
    Label:
        id: title
        size_hint: 0.8, 0.45
        color: 0.5, 0.05, 0.05, 1
        pos_hint: {'center_x': 0.5, 'top': 0.9}
        text: 'Coatirane\n        Adventures'
        font_name: 'Precious'
        font_size: '140pt'
    Button:
        id: start_game
        size_hint: 0.4156, 0.25
        pos_hint: {'x': 0.05625, 'center_y': 0.225}
        on_release: root.on_start_game()
        text: 'Start Game'
        #path: 'buttons/newgame'
    Button:
        id: exit_game
        size_hint: 0.4156, 0.25
        pos_hint: {'right': 0.94375, 'center_y': 0.225}
        #path: 'buttons/loadgame'
        on_release: root.on_exit_game()
        text: 'Exit Game'
