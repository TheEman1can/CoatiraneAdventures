#:import PPCHoverPathButton kivy.uix.buttonversions.PPCHoverPathButton
<SelectScreen>:
    name: 'select_start'
    Label:
        id: title
        size_hint: 1, 0.1
        pos_hint: {'center_x': 0.5, 'top': 0.95}
        text: 'Select a Recruit'
        font_name: 'Precious'
        font_size: '60pt'
#        size: self.texture_size
        color: 0, 0, 0, 1
#        font_size: app.get_dkey('ss.t fs', root.width)
#        pos_hint: app.get_dkey('ss.t p_h')
#        outline_width: app.get_dkey('ss.t ow')
#        outline_color: app.get_dkey('ss.t oc')
    Label:
        id: instructions
        size_hint: 0.75, 0.075
#        text_size: self.size
        pos_hint: {'top': 0.8, 'center_x': 0.5}
        text: 'You have two adventurers interested in joining your family but only have the finances to support one.'
        halign: 'left'
        font_name: 'Precious'
        font_size: '30pt'
#        size: self.texture_size
        color: 0, 0, 0, 1
#        font_size: app.get_dkey('ss.t fs', root.width)
#        pos_hint: app.get_dkey('ss.t p_h')
    PPCHoverPathButton:
        id: new_game_ais
        path: 'buttons/newgame.ais'
        size_hint: 0.25, 0.444
        pos_hint: {'x': 0.028, 'y': 0.05}
        on_release: root.choose_character(0)
    Label:
        id: new_game_ais_label
        size_hint: 0.25, 0.1
        pos_hint: {'x': 0.028, 'y': 0.5}
        text: 'Ais Wallenstein'
        font_name: 'Precious'
        size: self.texture_size
        color: app.get_dkey('ss.ngal c')
        font_size: '50pt'
#        font_size: app.get_dkey('ss.ngal fs', root.width)
#        pos_hint: app.get_dkey('ss.ngal p_h')
#        outline_width: app.get_dkey('ss.ngal ow')
#        outline_color: app.get_dkey('ss.ngal oc')
    PPCHoverPathButton:
        id: new_game_bell
        path: 'buttons/newgame.bell'
        size_hint: 0.25, 0.444
        pos_hint: {'right': 0.972, 'y': 0.05}
        on_release: root.choose_character(1)
    Label:
        id: new_game_bell_label
        size_hint: 0.25, 0.1
        pos_hint: {'right': 0.972, 'y': 0.5}
        text: 'Bell Cranel'
        font_name: 'Precious'
        size: self.texture_size
        color: app.get_dkey('ss.ngbl c')
        font_size: '50pt'
#        pos_hint: app.get_dkey('ss.ngbl p_h')
#        outline_width: app.get_dkey('ss.ngbl ow')
#        outline_color: app.get_dkey('ss.ngbl oc')
    Button:
        id: back
        size_hint: 0.2, 0.1
        pos_hint: {'x': 0.278, 'y': 0.05}
        text: 'Back'
        font_name: 'Gabriola'
        on_release: root.on_back_press()
    Button:
        id: next
        size_hint: 0.2, 0.1
        pos_hint: {'right': 0.722, 'y': 0.05}
        text: 'Finish'
        font_name: 'Gabriola'
        on_release: root.goto_next()